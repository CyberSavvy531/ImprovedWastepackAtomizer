	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="WastepackAtomizer"]/comps/li[@Class="CompProperties_Atomizer"]/stackLimit</xpath>
		<value>
			<stackLimit>15</stackLimit>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="WastepackAtomizer"]</xpath>
		<value>
			<designatorDropdown>WastepackAtomizers</designatorDropdown>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="WastepackAtomizer"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Building/Misc/Reversed/WastepackAtomizer</texPath>
		</value>
